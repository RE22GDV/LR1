@*
  Загальний макет: синя navbar, білий фон, лого зліва
*@
<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebUI</title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <style>
        :root { --bs-primary: #0d6efd; }
        body { background: white; }
        .navbar-brand img { height: 40px; margin-right: 10px; }
        table tr:hover { background: #f3f6ff; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-page="/Index">
                    <img src="~/logo2.png" alt="logo" />
                    ТОВ "Склад-магазин"
                </a>

                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target="#nav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="nav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-page="/Employees/Index">Працівники</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Positions/Index">Посади</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Products/Index">Товари</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/ProductTypes/Index">Види товару</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Customers/Index">Замовники</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Orders/Index">Замовлення</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Services/Index">Послуги</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Queries/Index">Запити</a></li> @* ← додано пункт меню *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container py-4">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
