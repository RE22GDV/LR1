@page
@model WebUI.Pages.Customers.IndexModel
@{
    ViewData["Title"] = "Замовники";
}

<h2>Список замовників</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>ПІБ</th>
            <th>Адреса</th>
            <th>Телефон</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var c in Model.Data)
    {
        <tr>
            <td>@c.Id</td>
            <td>@c.FullName</td>
            <td>@c.Address</td>
            <td>@c.Phone</td>
        </tr>
    }
    </tbody>
</table>
