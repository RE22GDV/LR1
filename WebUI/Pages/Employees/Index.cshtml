@page
@model WebUI.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Співробітники";
}

<h2>Список співробітників</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>ПІБ</th>
            <th>Вік</th>
            <th>Телефон</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var emp in Model.Data)
    {
        <tr>
            <td>@emp.Id</td>
            <td>@emp.FullName</td>
            <td>@emp.Age</td>
            <td>@emp.Phone</td>
            <td>
                <a class="btn btn-sm btn-outline-primary"
                   asp-page="Details" asp-route-id="@emp.Id">
                    Деталі
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>
